@model dangkihoivien.Models.HoiVien

@{
    ViewBag.Title = "DangKi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="form-box">
    <div id="form-box-header">
        <h2>ĐĂNG KÝ THÀNH VIÊN</h2>
    </div>
    <div id="form-box-content">
        @using (Html.BeginForm("DangKi", "DangKiHoiVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <!-- thong tin doanh nghiep -->
            <div class="form-group">
                <label for="tendoanhnghiep">Tên doanh nghiệp</label>
                <span class="text-danger"> *</span>
                @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Tendoanhnghiep, "", new { @class = "text-danger" })
                <input class="form-group-input"
                       id="tendoanhnghiep"
                       name="ThongTinDoanhNghiep.Tendoanhnghiep"
                       placeholder="Tên doanh nghiệp"
                       type="text"
                       value="@Model.ThongTinDoanhNghiep.Tendoanhnghiep" />
            </div>
            <div class="form-group">
                <label for="masothue">Mã số thuế</label>
                <span class="text-danger"> *</span>
                @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Masothue, "", new { @class = "text-danger" })
                <input class="form-group-input"
                       id="masothue"
                       name="ThongTinDoanhNghiep.Masothue"
                       placeholder="Mã số thuế"
                       type="text"
                       value="@Model.ThongTinDoanhNghiep.Masothue" />
            </div>
            <div class="form-group">
                <label for="dia_chi">Địa chỉ</label>
                <span class="text-danger"> *</span>
                @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Diachi, "", new { @class = "text-danger" })
                <input class="form-group-input"
                       id="dia_chi"
                       name="ThongTinDoanhNghiep.Diachi"
                       placeholder="Địa chỉ"
                       type="text"
                       value="@Model.ThongTinDoanhNghiep.Diachi" />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="dien_thoai_dn">Điện thoại</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Dienthoai, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="dien_thoai_dn"
                           name="ThongTinDoanhNghiep.Dienthoai"
                           placeholder="Điện thoại"
                           type="text"
                           value="@Model.ThongTinDoanhNghiep.Dienthoai" />
                </div>
                <div class="col-md-6">
                    <label for="zalo_dn">Zalo (SĐT sử dụng zalo)</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Zalo, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="zalo_dn"
                           name="ThongTinDoanhNghiep.Zalo"
                           placeholder="Zalo (SĐT sử dụng zalo)"
                           type="text"
                           value="@Model.ThongTinDoanhNghiep.Zalo" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="email_dn">Email</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.ThongTinDoanhNghiep.Email, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="email_dn"
                           name="ThongTinDoanhNghiep.Email"
                           placeholder="Email"
                           type="text"
                           value="@Model.ThongTinDoanhNghiep.Email" />
                </div>
                <div class="col-md-6">
                    <label for="website">Website</label>
                    <input class="form-group-input"
                           id="website"
                           name="ThongTinDoanhNghiep.Website"
                           placeholder="Website"
                           type="text"
                           @Model.ThongTinDoanhNghiep.Website />
                </div>
            </div>

            <!-- nguoi dai dien -->
            <h3>Người đại diện</h3>
            <div class="row">
                <div class="col-md-6">
                    <label for="ho_ten_ndd">Họ tên người đứng đầu</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien.Hoten, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="ho_ten_ndd"
                           name="NguoiDaiDien.Hoten"
                           placeholder="Họ tên người đứng đầu"
                           type="text"
                           value="@Model.NguoiDaiDien.Hoten" />
                </div>
                <div class="col-md-6">
                    <label for="chuc_vu_ndd">Chức vụ</label>
                    <input class="form-group-input"
                           id="chuc_vu_ndd"
                           name="NguoiDaiDien.Chucvu"
                           placeholder="Chức vụ"
                           type="text"
                           value="@Model.NguoiDaiDien.Chucvu" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="email_ndd">Email</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien.Email, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="email_ndd"
                           name="NguoiDaiDien.Email"
                           placeholder="Email"
                           type="text"
                           value="@Model.NguoiDaiDien.Email" />
                </div>
                <div class="col-md-6">
                    <label for="ngay_sinh_ndd">Ngày sinh</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien.Ngaysinh, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="ngay_sinh_ndd"
                           name="NguoiDaiDien.Ngaysinh"
                           placeholder="Ngày sinh"
                           type="date"
                           value="@Model.NguoiDaiDien.Ngaysinh.ToString("yyyy-MM-dd")" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="dien_thoai_ndd">Điện thoại</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien.Sdt, "", new { @class = "text-danger" })
                    <input class="form-group-input"
                           id="dien_thoai_ndd"
                           name="NguoiDaiDien.Sdt"
                           placeholder="Điện thoại"
                           type="text"
                           value="@Model.NguoiDaiDien.Sdt" />
                </div>
                <div class="col-md-6">
                    <label for="zalo_ndd">Zalo (SĐT sử dụng zalo)</label>
                    <span class="text-danger"> *</span>
                    @Html.ValidationMessageFor(model => model.NguoiDaiDien.Zalo, "", new { @class = "text-danger" })
