@model dangkihoivien.Models.QuanTriVien

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập quản trị</title>
    <link rel="shortcut icon"
          type="image/png"
          href="https://dangkyhoivien.hnba.com.vn/images/logohnba.jpg" />
    <!-- css -->
    <link rel="stylesheet" href="~/Asset/style_form_login_admin.css" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="body-custom">
    <div class="container d-flex justify-content-center align-items-center"
         id="container">
        <div class="wrapper d-flex justify-content-center align-items-center"
             id="form-wrapper">
            @using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post, new { id = "form-box" }))
            {
                <div class="wrapper d-flex justify-content-center align-items-center">
                    <h1>Đăng nhập</h1>
                </div>
                <div class="form-group">
                    <label for="Username">Tên đăng nhập</label>
                    <span class="text-danger"> *</span>
                    <input type="text"
                           class="form-control"
                           name="Username"
                           id="Username"
                           placeholder="Tên dăng nhập"
                           value="@Model.Username" />
                </div>
                <div class="form-group">
                    <label for="Password">Mật khẩu</label>
                    <span class="text-danger"> *</span>
                    <input type="password"
                           class="form-control"
                           name="Password"
                           id="Password"
                           placeholder="Mật khẩu"
                           value="@Model.Password" />
                </div>
                <span class="text-danger">@ViewBag.ErrorLogin</span>
                <div class="wrapper d-flex justify-content-center align-items-center" id="button-wrapper">
                    <input type="submit" class="btn btn-primary" value="Đăng nhập" />
                </div>
            }

        </div>
    </div>
</body>
</html>
