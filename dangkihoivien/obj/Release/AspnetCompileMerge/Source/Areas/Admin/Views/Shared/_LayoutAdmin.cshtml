<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý hội viên</title>
    <link rel="shortcut icon"
          type="image/png"
          href="https://dangkyhoivien.hnba.com.vn/images/logohnba.jpg" />
    <!-- css -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

    <link rel="stylesheet" href="~/Asset/style_index_qthv.css" />
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="body-custom">
    <div id="wrapper">
        <!-- sildebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion"
            id="slide-bar">
            <li class="nav-item">
                <a class="nav-link" id="nav-item-header" href="">
                    <i class="fa-solid fa-user-tie"></i>
                    <span>Admin</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="nav-item-content" href="">
                    <i class="fa-solid fa-house"></i>
                    <span>Menu</span>
                </a>
            </li>
        </ul>
        <div id="content">
            <!-- nav-bar -->
            <nav class="navbar navbar-expand navbar-light topbar mb-4 static-top shadow"
                 id="navbar">
                <div id="user-info">
                    <div class="dropdown">
                        <a type="button" class="d-flex align-items-center text-decoration-none m-lg-4" id="user-info-link" data-bs-toggle="dropdown" href="#">
                                <span class="text-warning m-lg-3">@Session["adminSession"]</span>
                                <img class="img-profile rounded-circle"
                                     src="~/Asset/Image/Logo_tỉnh_Hà_Nam.png" 
                                     height="30"/>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "AdminLogin")">Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
                
            </nav>
            <!-- main -->
            @RenderBody()
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    @RenderSection("EventScript", false)
</body>
</html>
