@model dangkihoivien.Models.HoiVienManager

<div class="d-flex align-items-center justify-content-between mb-4">
    <h1>Thông tin</h1>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div id="card-body">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                Số thành viên đã duyệt
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="hoi-vien-da-duyet-div">@Model.HoiVienDaDuyetCount()</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div id="card-body">
            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                Số thành viên chưa duyệt
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="hoi-vien-chua-duyet-div">@Model.HoiVienChuaDuyetCount()</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div id="card-body">
            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                Số thành viên bị từ chối
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800" id="hoi-vien-bi-tu-choi-div">@Model.HoiVienBiTuChoi()</div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div id="card-body">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                Tổng số thành viên đăng ký
            </div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.HoiVienCount()</div>
        </div>
    </div>
</div>
